@model ContatoModel;
@{
	ViewData["Title"] = "Criar Contato";
}

<div class="text-center">

	<h1 class="display-4 mt-4">Cadastrar Contato:</h1>

</div>

<div>
	<form asp-controller="Contato" asp-action="Criar" method="post">
		<div class="mb-3">
			<label for="nome" class="form-label">Nome</label>
			<input type="text" asp-for="Nome" class="form-control" required placeholder="Digite o nome do contato">
		</div>
		<div class="mb-3">
			<label for="email" class="form-label">E-Mail</label>
			<input type="email" asp-for="Email" class="form-control" required placeholder="Digite o e-mail do contato">
		</div>
		<div class="mb-3">
			<label for="celular" class="form-label">Celular</label>
			<input type="text" asp-for="Celular" class="form-control" required placeholder="Digite o celular do contato">
		</div>

		<button type="submit" class="btn btn-primary">Adicionar</button>
		<a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
	</form>
</div>