@using ControleDeContatos.Views.Contato.Enums
@model UsuarioModel
@{
	ViewData["Title"] = "Editar Usuário";
}

<div class="text-center">

	<h1 class="display-4 mt-4">Editar usuário:</h1>

</div>

<div>
	<form asp-controller="Usuario" asp-action="Alterar" method="post">
        <input type="hidden" asp-for="Id" />
		<div class="mb-3">
			<label for="nome" class="form-label">Nome</label>
			<input type="text" asp-for="Nome" class="form-control" required placeholder="Digite o nome do usuário">
		</div>
		<div class="mb-3">
			<label for="email" class="form-label">E-mail</label>
			<input type="email" asp-for="Email" class="form-control" required placeholder="Digite o e-mail do usuário">
		</div>
		<div class="mb-3">
			<label for="login" class="form-label">Login</label>
			<input type="text" asp-for="Login" class="form-control" required placeholder="Digite o Login do usuário">
		</div>
		<div class="mb-3">
			<label for="nome" class="form-label">Perfil</label>
			<select asp-for="Perfil" class="form-control">
				<option value="0">Escolha</option>
                <option value="@PerfilEnum.Admin">Administrador</option>
				<option value="@PerfilEnum.Usuario">Usuário</option>''
			</select>
		</div>

		<button type="submit" class="btn btn-primary">Alterar</button>
		<a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
	</form>
</div>


