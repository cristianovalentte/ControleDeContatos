@model LoginModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}



<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-1 mt-md-2 pb-3">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Entre com seu login e senha</p>
                            @if (ViewBag.MensagemErro != null)
                            {
                                <div class="alert alert-danger mt-2" role="alert">
                                    @ViewBag.MensagemErro 
                                </div>
                            }

                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                <label for="login" class="form-label">Login</label>
                                <input type="text" asp-for="Login" id="login" required class="form-control" />

                            </div>

                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                <label for="senha" class="form-label">Senha</label>
                                <input type="password" required asp-for="Senha" class="form-control" />

                            </div>

                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" type="submit">Entrar</button>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>